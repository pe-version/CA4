{
  "dashboard": {
    "title": "CA3 Metals Processing Dashboard",
    "tags": ["ca3", "metals", "kafka", "mongodb"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "Producer Message Rate by Metal",
        "targets": [
          {
            "expr": "rate(producer_messages_total[1m])",
            "legendFormat": "{{metal}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Messages/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "Processor Message Rate by Metal",
        "targets": [
          {
            "expr": "rate(processor_messages_total[1m])",
            "legendFormat": "{{metal}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Messages/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "type": "stat",
        "title": "Total Messages Produced",
        "targets": [
          {
            "expr": "sum(producer_messages_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "type": "stat",
        "title": "Total Messages Processed",
        "targets": [
          {
            "expr": "sum(processor_messages_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "type": "graph",
        "title": "MongoDB Insert Rate",
        "targets": [
          {
            "expr": "rate(mongodb_inserts_total[1m])",
            "legendFormat": "{{metal}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Inserts/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "type": "graph",
        "title": "Processing Duration (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(processing_duration_seconds_bucket[1m]))",
            "legendFormat": "p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 24 },
        "type": "stat",
        "title": "Kafka Connection Status",
        "targets": [
          {
            "expr": "kafka_connection_status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 24 },
        "type": "stat",
        "title": "MongoDB Connection Status",
        "targets": [
          {
            "expr": "mongodb_connection_status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 24 },
        "type": "stat",
        "title": "Total Errors",
        "targets": [
          {
            "expr": "sum(producer_errors_total) + sum(processor_errors_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        }
      }
    ],
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 0
  },
  "overwrite": true
}
